class Solution {
public:
    string longestCommonPrefix(vector<string>& s) {

        int n = s.size();
        string ans = s[0];

        for(int i=1; i<n; i++){
            int j=0;

            while(j < ans.size() && j<s[i].size() && s[i][j] == ans[j]){
                j++;
            }
            ans = ans.substr(0,j);
        }
        return ans;
    }
};
