class Solution {
public:
    int maxDepth(string s) {
        int c = 0;
        int ans = 0;

        for(int i=0; i<s.size(); i++){
            if(s[i] == '('){
                c++;
                ans = max(c,ans);
            }
            else if(s[i] == ')'){
                c--;
            }
        }
        return ans;

    }
};
