/*
Definition of singly linked list:
struct ListNode
{
    int val;
    ListNode *next;
    ListNode()
    {
        val = 0;
        next = NULL;
    }
    ListNode(int data1)
    {
        val = data1;
        next = NULL;
    }
    ListNode(int data1, ListNode *next1)
    {
        val = data1;
        next = next1;
    }
};
*/

class Solution {
public:
    int findLengthOfLoop(ListNode *head) {
        unordered_map<ListNode *,bool>vis;

        ListNode *temp = head;
        ListNode * cp = nullptr;
        int c = 1;

        while(temp != NULL){
            if(vis.find(temp) != vis.end()){
                cp = temp;
                break;
            }
            vis[temp] = true;
            temp = temp->next;
        }
        if (cp == nullptr) return 0;
        temp = temp->next;

        while(temp!= cp){
            c++;
            temp = temp->next;
        }
        
        return c;
    }
};
