class Solution{
public:
    int lowerBound(vector<int> &nums, int x){
        int n = nums.size();

        int s = 0;
        int e = n-1;

        while(s<=e){
            int m = s+(e-s)/2;
            if(nums[m] < x){
                s = m+1;
            }
            else if(nums[m] >= x){
                return m;
            }  
        }
        return -1;
    }
};
