class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int n = nums.size();

        if(n==0) return 0;

        int l = 1;
        int c = 1;

        sort(nums.begin(),nums.end());

        for(int i=1; i<n; i++){
            if(nums[i] == nums[i-1]) continue;

            if(nums[i] == nums[i-1] +1){
                c++;
            }
            else{
                c=1;
            }
            l = max(l,c);
        }
        return l;
    }
};
